{
  "name": "peg-bus",
  "author": "Hebert Porto",
  "main": "node_modules/expo/AppEntry.js",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "test": "node ./node_modules/jest/bin/jest.js --watchAll",
    "reformat-code": "npm run prettier && npm run lint:fix",
    "lint:fix": "prettier --single-quote --no-semi --write '{src,__{tests,mocks}__}/**/*.js'"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/samples": "2.1.1",
    "axios": "^0.18.0",
    "expo": "^31.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "prettier": "^1.15.1",
    "prop-types": "^15.6.2",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-31.0.0.tar.gz",
    "react-native-ui-kitten": "^3.1.2",
    "react-navigation": "^3.0.9",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-native-prettier": "^1.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.4",
    "jest-expo": "30.0.0",
    "lint-staged": "^8.0.5",
    "prettier-standard": "^8.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --single-quote --no-semi --write '{src,__{tests,mocks}__}/**/*.js'",
      "git add"
    ]
  }
}
